<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="25dp">

    <com.ts.phi.views.TextCircleView
        android:id="@+id/tcv_icon"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.ts.phi.views.ChatBubbleBgTextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:gravity="left|center_vertical"
        app:bubbleColor="#FFE1E2E4"
        android:maxWidth="942px"
        android:minHeight="109dp"
        android:padding="20dp"
        android:textSize="22sp"
        android:paddingStart="35dp"
        app:arrowDirection="left"
        app:arrowWidth="20dp"
        app:arrowHeight="30dp"
        app:layout_constraintStart_toEndOf="@id/tcv_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_think_cost_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:text="AI thinking costs:"
        android:textColor="#FF667CC8"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/tv_content"
        app:layout_constraintTop_toBottomOf="@id/tv_content" />

    <TextView
        android:id="@+id/tv_think_costs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textColor="#FF575755"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/tv_think_cost_title"
        app:layout_constraintTop_toTopOf="@id/tv_think_cost_title" />


</androidx.constraintlayout.widget.ConstraintLayout>